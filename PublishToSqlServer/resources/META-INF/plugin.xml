<idea-plugin>
  <id>de.heiss.publiscript.plugin</id>
  <name>Publish Script for Visual Studio Database Projects</name>
  <version>0.1</version>
  <vendor email="simonheiss87@gmail.com" url="https://github.com/Lauchi/Publish-Script-for-MS-SQL-Rider-Plugin">Simon Heiss</vendor>
  <depends>com.intellij.modules.lang</depends>

  <description><![CDATA[
      This Plugin provides a "Publish" function for Databaseprojects, like in Visual Studio.
    ]]></description>

  <idea-version since-build="145.0"/>
  <extensions defaultExtensionNs="com.intellij">
  </extensions>
  <actions>
    <group id="PublisSqlScript.SampleMenu" text="_Sample Menu" description="Sample menu">
      <add-to-group group-id="ProjectViewPopupMenu" anchor="last"  />
      <action id="PublisSqlScript.CreatePublishScript" class="CreatePublishScriptHandler" text="Create Publish Script" description="Creates a publish script for a Database Project" />
    </group>
  </actions>

</idea-plugin>